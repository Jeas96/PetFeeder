<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetFeeder.Views.FeedList">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker DateSelected="SelectedDate" MaximumDate="{Binding MaxDate}"/>
            <ListView x:Name="listData" ItemsSource="{Binding ListaRegistros}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HeightRequest="60">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Text="{Binding date, StringFormat=' Fecha: {0}'}"></Label>
                                    <Label Grid.Row="1" Text="{Binding cantidad, StringFormat='Tiempo: {0}s'}"></Label>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>